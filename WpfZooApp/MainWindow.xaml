<Window x:Class="WpfZooApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfZooApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="label" Content="Zoo Liste" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-7.669,-1.886"/>
        <ListBox x:Name="listZoos" HorizontalAlignment="Left" Height="175" SelectionChanged="listZoos_SelectionChanged" Margin="10,41,0,0" VerticalAlignment="Top" Width="175" RenderTransformOrigin="0.41,0.33"/>
        <ListBox x:Name="listAssociatedAnimals" HorizontalAlignment="Left" Height="175" Margin="224,41,0,0" VerticalAlignment="Top" Width="175" RenderTransformOrigin="-2.058,-0.729"/>
        <Label x:Name="label1" Content="Tiere in ausgewählten Zoo" HorizontalAlignment="Left" Margin="224,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label2" Content="Alle Tiere" HorizontalAlignment="Left" Margin="598,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.752,-0.506"/>
        <ListBox x:Name="listAllAnimals" HorizontalAlignment="Left" Height="304" Margin="598,41,0,0" VerticalAlignment="Top" Width="138"/>

    </Grid>
</Window>
